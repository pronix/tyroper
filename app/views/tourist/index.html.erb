<%= grid(@tourists_grid, :show_filters => :always) do |t| 

  t.column :column_name => 'Фамилия', :attribute_name => 'surname_kir'  do |c|
    link_to c.surname_kir, :action => 'edit', :id => c.id
  end

  t.column :column_name => 'Имя', :attribute_name => 'name_kir'  do |c|
    link_to c.name_kir, :action => 'edit', :id => c.id
  end

  t.column :column_name => 'Отчество', :attribute_name => 'ot4_kir' do |c|
    link_to c.ot4_kir, :action => 'edit', :id => c.id
  end

  t.column :column_name => 'Дата рождения', :attribute_name => 'borndate' do |c|
    link_to c.borndate, :action => 'edit', :id => c.id
  end

  t.column :cplumn_name => 'Создатель', :attribute_name => 'login',   :model_class => User do |c|
    c.user.login
  end

end -%>
